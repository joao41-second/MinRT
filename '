}

void ter_list_comands(int tab_dize,int len,t_user_in data,char *str)
{
	int i;
	t_comand *command;
	i = 0;
	if(tab_dize != 0 && len == 0)
		while (data.term != NULL)
		{
			i++;
			command =  data.term->content;
			term_change_color(data,command->name , 1, 20);
			data.term = data.term->next;			
		}
	if(tab_dize != 0 )
		while (data.term != NULL)
		{
			i++;
			command =  data.term->content;
			if(ft_strncmp(str, command->name, len) == 0)
				term_change_color(data,command->name , i, 20);
			if(ft_strncmp(str, command->name, ft_strlen(command->name)) == 0)
				ter_opcions_( *command, data, str, len);
			data.term = data.term->next;			
		}
}


void ter_tab_logic(t_user_in data, int key,char *str)
{
	int len;
	static int tab_dize = 0;

	len = ft_strlen(str);
	if(key == KEY_TAB)
		tab_dize++;
	ter_list_comands(tab_dize,len,data,str);
	


}
