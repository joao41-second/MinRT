    "version": "0.2.0",
    "configurations": [
        {
            "name": "MINIRT",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/miniRT",
            "args": ["${workspaceFolder}/scenes/img00.rt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                  "description": "Set GDB to follow child processes",
                  "text": "set follow-fork-mode child",
                  "ignoreFailures": true
                }
            ],
            // "logging": {
            //   "engineLogging": true
            // },
            // "preLaunchTask": "",
            // "postDebugTask": "",
            // "miDebuggerPath": "/usr/bin/gdb",
            // "miDebuggerArgs": "",
            // "launchCompleteCommand": "exec-continue",
            // "sourceFileMap": {
            //   "/usr/src": "${workspaceFolder}/src"
            // }
          
          },
        {
            "type": "vgdb",
            "request": "launch",
            "name": "C/C++ Debug",
            "program": "${workspaceFolder}/a.out",
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}